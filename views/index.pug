extends ./inc/layout

block content
  h1.page-header
    i.mdi.mdi-file-document 
    | Articles
    a(data-toggle="modal" href='#add-article').btn.btn-default.pull-right.pull-right 
      i.mdi.mdi-file-plus.mdi-24px
    .clearfix
  ul.list-group
  each article in articles
    .panel.panel-default
      .row
        .col-md-4.col-sm-4
          img(style='width:100%;', src='http://lorempixel.com/400/260/sports/', alt='image').img-responsive
        .col-md-8.col-sm-8
          div(style='padding:15px;')
            h4= article.title  
            h5= article.author
            h6= article.createdAt
            br
            p= article.content
            hr
            a(href='/article/'+article.id).btn.pull-right Read more
            .clearfix

  div(id='add-article').modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button(type='button', data-dismiss='modal', aria-hidden='true').close &times;
          h4.modal-title 
            i.mdi.mdi-information-outline.mdi-24px 
            | Article information
        .modal-body
          form(action='/api/article/create', method='post', role='form')
            .form-group
              label Title
              input(name='title', type='text', placeholder='Title', required).form-control
            .form-group
              label Author
              input(name='author', type='text', placeholder='Author', required).form-control
            .form-group
              label Content
              textarea(name='content', style='resize:vertical;', rows='5', placeholder='Content', required).form-control
            .modal-footer
              button(type='button', data-dismiss='modal').btn.btn-default
                i.mdi.mdi-close-octagon-outline.mdi-18px
              button(type='submit').btn.btn-success 
                i.mdi.mdi-content-save.mdi-18px